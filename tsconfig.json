{
  "compilerOptions": {
    // Output settings
    "outDir": "./dist",
    "rootDir": "./src",

    // Target and module system for Node.js with ES modules
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Type safety and compatibility
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Allow imports with .ts/.tsx extensions if needed
    "allowImportingTsExtensions": true,

    // Optionally, include this if you want type checking but no output from `tsc`
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
